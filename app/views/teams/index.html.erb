<h1>Listing teams</h1>
<p><%= link_to "Show Standings", standings_path %> | <%= link_to "Qualifications Match List", qualifications_path %>
	| <%= link_to "Finals Match List", finals_path %> | <%= link_to "Overall Results", results_path %></p>
<table cellpadding="5">

<% for team in @teams %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= team.fll_number %></td>
    <td><%= link_to team.team_name, team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
	<td><%= team.qualifications.length %></td>
	<td><%= link_to "Enter Qual Match Data", new_team_qualification_path(team) unless team.qualifications.length > APP_CONFIG["max_matches"] - 1 %></td>
	<td><%= team.finals.length %></td>
	<td><%= link_to "Enter Final Match Data", new_team_final_path(team) %></td>
	
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New team', new_team_path %>
