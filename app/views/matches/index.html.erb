<p><%= link_to "Team List ", teams_path %></p>
<table>
<% @matches.group_by(&:match_number).sort.each do |match_number, matches| %>
	<tr>
		<td colspan="2"><b><%= link_to "Match: #{match_number}", match_path(match_number) %></b></td>
	</tr>
	<% matches.each do |match| %>
	<tr>
		<td><%= match.table_number %></td>
		<td><%= match.team.fll_number %></td>
		<td><%= link_to match.team.team_name, edit_team_match_path(match.team_id, match) %></td>
		<td><%= match.score %></td>
	</tr>
	<% end %>
<% end %>
</table>