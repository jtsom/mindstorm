<%= form_for [@team, @robotscore] do |f| %>
  <%= errors_for(@robotscore) %>
<p>Judge: <%= f.text_field :judge_name %></p>

<table class="grid">
    <tr style="border: none;">
        <td style="border: none;">
            &nbsp;
        </td>
        <td>
            <b><i>None</i></b>
        </td>
        <td>
            <b><i>Beginning</i></b>
        </td>
        <td>
            <i><b>Developing</b></i>
        </td>
        <td>
            <i><b>Accomplished</b></i>
        </td>
        <td>
            <i><b>Exemplary</b></i>
        </td>
    </tr>
    <tr>
        <td rowspan="8">
            <div class="vertical">
              <span>Mechanical&nbsp;Design</span>
            </div>
        </td>
        <td class="altRC" colspan="2">
            <b>Durbility</b>
        </td>
        <td class="altRC" colspan="3">
            Robot designed to maintain structural integrity and have the ability to withstand rigors of competition
        </td>
    </tr>
    <tr>
		<td>
			<%= f.radio_button :m_durability, "0", :default => true %>
		</td>
        <td>
            <%= f.radio_button :m_durability, "1" %> <%= f.label :m_durability, "quite fragile, breaks a lot", :value => "1" %>
        </td>
        <td>
            <%= f.radio_button :m_durability, "2" %> <%= f.label :m_durability, "frequent or significant faults/repairs", :value => "2" %>
        </td>
        <td>
            <%= f.radio_button :m_durability, "3" %> <%= f.label :m_durability, "rare faults/repairs", :value => "3" %>
        </td>
        <td>
            <%= f.radio_button :m_durability, "4" %> <%= f.label :m_durability, "sound construction; no repairs", :value => "4" %>
        </td>
    </tr>
    <tr class="altRC">
        <td colspan="2">
            <b>Mechanical Efficiency</b>
        </td>
        <td colspan="4">
            Robot designed to be easy to repair, modify, and be handled by technicians
        </td>
    </tr>
    <tr>
		<td>
			<%= f.radio_button :m_efficiency, "0", :default => true %>
		</td>
        <td>
            <%= f.radio_button :m_efficiency, "1" %> <%= f.label :m_efficiency, "excessive time to repair/modify", :value => "1" %>
        </td>
        <td>
            <%= f.radio_button :m_efficiency, "2" %> <%= f.label :m_efficiency, "inefficient to repair/modify", :value => "2" %>
        </td>
        <td>
            <%= f.radio_button :m_efficiency, "3" %> <%= f.label :m_efficiency, "appropriate time to repair/modify", :value => "3" %>
        </td>
        <td>
            <%= f.radio_button :m_efficiency, "4" %> <%= f.label :m_efficiency, "streamlined time to repair/modify", :value => "4" %>
        </td>
    </tr>
    <tr class="altRC">
        <td colspan="2">
            <b>Mechanization</b>
        </td>
        <td colspan="4">
            Robot mechanisms designed to move or act with appropriate speed, strength and accuracy for intended tasks (propulsion and execution)
        </td>
    </tr>
    <tr>
		<td>
			<%= f.radio_button :m_mechanization, "0", :default => true %>
		</td>
        <td>
            <%= f.radio_button :m_mechanization, "1" %> <%= f.label :m_mechanization, "imbalance of speed, strength and accuracy on most tasks", :value => "1" %>
        </td>
        <td>
            <%= f.radio_button :m_mechanization, "2" %> <%= f.label :m_mechanization, "imbalance of speed, strength and accuracy on some tasks", :value => "2" %>
        </td>
        <td>
            <%= f.radio_button :m_mechanization, "3" %> <%= f.label :m_mechanization, "appropriate balance of speed, strength and accuracy on most tasks", :value => "3" %>
        </td>
        <td>
            <%= f.radio_button :m_mechanization, "4" %> <%= f.label :m_mechanization, "appropriate balance of speed, strength and accuracy on every task", :value => "4" %>
        </td>
    </tr>
	<tr height="60px">
		<td colspan="5"><%= f.check_box :award_mechdesign, {}, "Y", "N" %> <strong>Mechanical Design Award Consideration</strong></td>
	</tr>
</table>

